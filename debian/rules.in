#!/usr/bin/make -f
# See debhelper(7) (uncomment to enable)
# output every command that modifies files on the build system.
export DH_VERBOSE = 1

CONF_DIRTY := $(shell @CONFIG_CHECKER@)
GIT_DIRTY := $(shell command -v git >/dev/null 2>&1 && (git diff --quiet || echo dirty))

%:
ifdef CONF_DIRTY
	@echo '====> Build configuration outdated, refusing to packetize'
	@echo '      ${CONF_DIRTY}'
	@echo '      Reconfigure with: ninja reconfigure'
	@echo
	@false
else ifdef GIT_DIRTY
	@echo '====> Git repository dirty, refusing to packetize'
	@echo
	@false
else
	dh $@
endif

override_dh_auto_clean:
	@ninja @NINJA-ARGS@ clean

override_dh_auto_build:
	@ninja @NINJA-ARGS@

override_dh_auto_install:
	@DESTDIR=${PWD}/debian/tmp ninja @NINJA-ARGS@ install
	# Compatibility link for naming transition gul -> gul14
	@ln -s `basename ${PWD}/debian/tmp/export/doocs/lib/*.so` ${PWD}/debian/tmp/export/doocs/lib/libgul.so || true
